    <link destdir="${image}" modulepath="${jdkmods}${jmods}"
          modules="${hello.mod},${smile.mod}"
          resourceOrder="**/resource1.txt"/>
  </target>

  <target name="ordering-nested" depends="-jmods">
    <link destdir="${image}" modulepath="${jdkmods}${jmods}"
          modules="${hello.mod},${smile.mod}">
      <resourceOrder pattern="**/resource1.txt"/>
    </link>
  </target>

