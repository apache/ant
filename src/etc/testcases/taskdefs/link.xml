  <target name="-jmods" depends="-smile,-legal">
    <property name="hello.jmod" value="${jmods}/hello.jmod"/>
    <property name="smile.jmod" value="${jmods}/smile.jmod"/>

    <jmod destfile="${hello.jmod}"
          classpath="${hello.jar}"
          legalpath="${hello.legal}"
          manpath="${manpages}"/>

