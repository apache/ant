  <target name="launchers-nested-missing-name" depends="-jmods">
    <link destdir="${image}" modulepath="${jdkmods}${jmods}"
          modules="${hello.mod},${smile.mod}">
      <launcher              module="${hello.mod}" mainClass="${hello.main-class}"/>
